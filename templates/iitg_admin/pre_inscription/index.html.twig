{% extends 'BaseAdmin.html.twig' %}

{% block title %}Pre Inscription index{% endblock %}

{% block body %}
    <div class="row page-titles mx-0">
        <div class="col-sm-6 p-md-0">
            <div class="welcome-text">
                <h4>Pre Inscription</h4>
            </div>
        </div>
        <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0);">Pre Inscription</a></li>
            </ol>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-12">
            <div class="row tab-content">
                <div id="list-view" class="tab-pane fade active show col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">All Pre Inscription</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="example3" class="display" style="min-width: 845px">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>FirstName</th>
                                            <th>LastName</th>
                                            <th>Email</th>
                                            <th>Etab</th>
                                            <th>Bac</th>
                                            <th>Speciality</th>
                                            <th>CreatedAt</th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        {% for pre_inscription in pre_inscriptions %}
                                            <tr style="color: {% if pre_inscription.isAccepted %}green{% else %}red{% endif %}">
                                                <td>{{ loop.index }}</td>
                                                <td>{{ pre_inscription.firstName }}</td>
                                                <td>{{ pre_inscription.lastName }}</td>
                                                <td>{{ pre_inscription.email }}</td>
                                                <td>{{ pre_inscription.etab }}</td>
                                                <td>{{ pre_inscription.bac }}</td>
                                                <td>{{ pre_inscription.speciality.filiereByParcours }}</td>
                                                <td>{{ pre_inscription.createdAt ? pre_inscription.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                                <td>
                                                    <table>
                                                        <tr>
                                                            <td> <a class="btn btn-sm btn-primary" href="{{ path('app_iitg_admin_pre_inscription_show', {'id': pre_inscription.id}) }}"><i class="la la-eye"></i></a>
                                                            </td>

                                                        </tr>
                                                    </table>
                                                </td>

                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="7">no records found</td>
                                            </tr>
                                        {% endfor %}




                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>



{% endblock %}
