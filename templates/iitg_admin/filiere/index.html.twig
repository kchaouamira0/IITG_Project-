{% extends 'BaseAdmin.html.twig' %}

{% block title %}Course index{% endblock %}

{% block body %}
    <div class="row page-titles mx-0">
        <div class="col-sm-6 p-md-0">
            <div class="welcome-text">
                <h4>Course</h4>
            </div>
        </div>
        <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0);">Course</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0);">All Courses</a></li>
            </ol>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-12">
            <div class="row tab-content">
                <div id="list-view" class="tab-pane fade active show col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">All Courses</h4>
                            <a href="{{ path('app_iitg_admin_filiere_new') }}" class="btn btn-primary">+ Add new</a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="example3" class="display" style="min-width: 845px">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Name</th>
                                            <th>Domaine</th>
                                            <th>Parcours</th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        {% for filiere in filieres %}
                                            <tr>
                                                <td>{{ loop.index }}</td>
                                                <td>{{ filiere.name }}</td>
                                                <td>{{ filiere.domaine }}</td>
                                                <td>
                                                    <table>
                                                        <tr>
                                                            <td style="width: 60%">
                                                                {% if filiere.filiereByParcours %}
                                                                    {% if filiere.filiereByParcours is not empty %}
                                                                        <ul>
                                                                            {% for parcoursOfFiliere in filiere.filiereByParcours %}
                                                                                <li>




                                                                                    <table>
                                                                                        <tr>
                                                                                            <td style="width: 80%">{{   parcoursOfFiliere.parcours }}</td>
                                                                                            <td>
                                                                                                <a href="{{ path('app_iitg_admin_filiere_by_parcours_delete_parcours_for_filiere',{'filiere_id':filiere.id,'parcours_id':parcoursOfFiliere.parcours.id}) }}">X</a>
                                                                                            </td>
                                                                                        </tr>
                                                                                    </table>



                                                                                </li>
                                                                            {% endfor %}
                                                                        </ul>
                                                                    {% else %}
                                                                        Aucun parcours existe
                                                                    {% endif %}
                                                                {% endif %}
                                                            </td>
                                                            <td><a class="btn btn-sm btn-primary" href="{{ path('app_iitg_admin_filiere_by_parcours_new_parcours_for_filiere',{'filiere_id':filiere.id}) }}">ADD Parcours</a></td>
                                                        </tr>
                                                    </table>

                                                </td>

                                                <td>
                                                    <table>
                                                        <tr>
                                                            <td> <a class="btn btn-sm btn-primary" href="{{ path('app_iitg_admin_filiere_show', {'id': filiere.id}) }}"><i class="la la-eye"></i></a>
                                                            </td>
                                                            <td><a class="btn btn-sm btn-danger" href="{{ path('app_iitg_admin_filiere_edit', {'id': filiere.id}) }}"><i class="la la-pencil"></i></a>
                                                            </td>
                                                            <td> <a class="btn btn-sm btn-danger" href="#"><i class="la la-trash-o"></i></a>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>

                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="7">no records found</td>
                                            </tr>
                                        {% endfor %}




                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>





{% endblock %}
