{% extends 'baseAdmin.html.twig' %}

{% block title %}Ouverture Pré-Inscription{% endblock %}

{% block body %}
    <div class="row page-titles mx-0">
        <div class="col-sm-6 p-md-0">
            <div class="welcome-text">
                <h4>Ouverture Pré-Inscription</h4>
            </div>
        </div>
        <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0);">Ouverture Pré-Inscription</a></li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="row tab-content">
                <div id="list-view" class="tab-pane fade active show col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">List</h4>
                            <a href="{{ path('app_iitg_admin_open_pre_inscription_new') }}" class="btn btn-primary">+ Add new</a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">

                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Title</th>
                                            <th>Année universitaire</th>
                                            <th>Date Start</th>
                                            <th>Date End</th>
                                            <th>Description</th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for open_pre_inscription in open_pre_inscriptions %}
                                            <tr {{ open_pre_inscription.current ? 'class="bg-light"' : 'class="bg-warning"' }}>
                                                <td>{{ open_pre_inscription.id }}</td>
                                                <td>{{ open_pre_inscription.title }}</td>
                                                <td>{{ open_pre_inscription.academicYear }}</td>
                                                <td>{{ open_pre_inscription.dateStart ? open_pre_inscription.dateStart|date('Y-m-d') : '' }}</td>
                                                <td>{{ open_pre_inscription.dateEnd ? open_pre_inscription.dateEnd|date('Y-m-d') : '' }}</td>
                                                <td>{{ open_pre_inscription.description }}</td>
                                                <td>
                                                    <table>
                                                        <tr>
                                                            <td> <a class="btn btn-sm btn-primary" href="{{ path('app_iitg_admin_pre_inscription_by_open_inscription', {'id': open_pre_inscription.id}) }}"><i class="la la-eye"></i></a>
                                                            </td>
                                                            <td><a class="btn btn-sm btn-danger" href="{{ path('app_iitg_admin_open_pre_inscription_edit', {'id': open_pre_inscription.id}) }}"><i class="la la-pencil"></i></a>
                                                            </td>
                                                            <td> <a class="btn btn-sm btn-danger" href="{{ path('app_iitg_admin_open_pre_inscription_delete', {'id': open_pre_inscription.id}) }}" onclick="return confirm('Are you sure to delete?')"><i class="la la-trash-o"></i></a>
                                                            </td>
                                                            
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="6">no records found</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




{% endblock %}
