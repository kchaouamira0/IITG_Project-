                                                <td>
                                                    <table>
                                                        <tr>
                                                            <td> <a class="btn btn-sm btn-primary" href="{{ path('app_iitg_admin_speciality_show', {'id': speciality.id}) }}"><i class="la la-eye"></i></a>
                                                            </td>
