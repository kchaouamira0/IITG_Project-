                                            <th>Fili√®re</th>
                                            <th>Domaine</th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        {% for speciality in specialities %}
                                            <tr>
                                                <td>{{ loop.index }}</td>
                                                <td><span class="badge badge-success">{{ speciality.name }}</span></td>
                                                <td>{{ speciality.filiereByParcours.parcours.abrv }}</td>
                                                <td>{{ speciality.filiereByParcours.filiere }}</td>
