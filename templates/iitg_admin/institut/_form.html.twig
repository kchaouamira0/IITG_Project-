{{ form_start(form) }}
<h4 class="card-title">{{ form_label(form.adress) }}</h4>

<div class="form-group row">
    <div class="col-2"></div>
    <div class="col-10">
        {{ form_widget(form.adress) }}
    </div>
</div>

<h4 class="card-title">Emails</h4>

<fieldset class="form-group">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-10" id="email_list" data-prototype="{{ form_widget(form.emails.vars.prototype)|e('html_attr') }}">

            {% for row in form.emails %}

                <div class="panel panel-warning border bg-info-alt">
                    <div class="panel-heading">
                        <strong>Email {{ loop.index }}</strong>
                    </div>
                    <div class="panel-body">
                        {{ form_row(row) }}
                    </div>
                </div>
                <br/>

            {% endfor %}
        </div>
    </div>
</fieldset>


<h4 class="card-title">Phones</h4>

<fieldset class="form-group">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-10" id="exp_list" data-prototype="{{ form_widget(form.phones.vars.prototype)|e('html_attr') }}">

            {% for row in form.phones %}

                <div class="panel panel-warning border bg-info-alt">
                    <div class="panel-heading">
                        <strong>Phone {{ loop.index }}</strong>
                    </div>
                    <div class="panel-body">
                        {{ form_row(row) }}
                    </div>
                </div>
                <br/>

            {% endfor %}
        </div>
    </div>
</fieldset>        

<div class="form-group row">
    <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>
{{ form_end(form) }}
