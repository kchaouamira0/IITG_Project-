{{ form_start(form) }}


<div class="form-group row">
    <div class="col-6">
        <label>{{ form_label(form.firstName) }}</label>
        {{ form_widget(form.firstName) }}
    </div>
    <div class="col-6">
        <label>{{ form_label(form.lastName) }}</label>
        {{ form_widget(form.lastName) }}
    </div>
</div>
    
    
<div class="form-group row">
    <div class="col-12">
        <label>{{ form_label(form.address) }}</label>
        {{ form_widget(form.address) }}
    </div>
</div>
        
<div class="form-group row">
    <div class="col-6">
        <label>{{ form_label(form.sign) }}</label>
        {{ form_widget(form.sign,{'attr':{'class':'form-control','style': 'cursor: pointer;'}}) }}
    </div>
    <div class="col-6">
        <label>{{ form_label(form.imageProfile) }}</label>
        {{ form_widget(form.imageProfile,{'attr':{'class':'form-control','style': 'cursor: pointer;'}}) }}
    </div>
</div>


<h4 class="card-title">Emails</h4>

<fieldset class="form-group">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-10" id="email_list" data-prototype="{{ form_widget(form.emails.vars.prototype)|e('html_attr') }}">

            {% for row in form.emails %}

                <div class="panel panel-warning border bg-info-alt">
                    <div class="panel-heading">
                        <strong>Email {{ loop.index }}</strong>
                    </div>
                    <div class="panel-body">
                        {{ form_row(row) }}
                    </div>
                </div>
                <br/>

            {% endfor %}
        </div>
    </div>
</fieldset>


<h4 class="card-title">Phones</h4>

<fieldset class="form-group">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-10" id="exp_list" data-prototype="{{ form_widget(form.phones.vars.prototype)|e('html_attr') }}">

            {% for row in form.phones %}

                <div class="panel panel-warning border bg-info-alt">
                    <div class="panel-heading">
                        <strong>Phone {{ loop.index }}</strong>
                    </div>
                    <div class="panel-body">
                        {{ form_row(row) }}
                    </div>
                </div>
                <br/>

            {% endfor %}
        </div>
    </div>
</fieldset>   


<div class="form-group row">
    <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>
{{ form_end(form) }}
