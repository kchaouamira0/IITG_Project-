{% extends 'BaseAdmin.html.twig' %}

{% block title %}Année Universitaire{% endblock %}

{% block body %}
    <div class="row page-titles mx-0">
        <div class="col-sm-6 p-md-0">
            <div class="welcome-text">
                <h4>Année Universitaire</h4>
            </div>
        </div>
        <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0);">Année Universitaire</a></li>
            </ol>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-12">
            <div class="row tab-content">
                <div id="list-view" class="tab-pane fade active show col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Année Universitaire</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">


                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Value</th>
                                            <th>---</th>
                                            <th>Current</th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for academic_year in academic_years %}
                                            <tr>
                                                <td>{{ academic_year.id }}</td>
                                                <td>{{ academic_year.value }}</td>
                                                <td>{{ academic_year }}</td>
                                                <td>{{ academic_year.current ? 'Yes' : 'No' }}</td>
                                                <td>
                                                    <a href="{{ path('app_iitg_admin_academic_year_show', {'id': academic_year.id}) }}">show</a>
                                                    <a href="{{ path('app_iitg_admin_academic_year_edit', {'id': academic_year.id}) }}">edit</a>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="5">no records found</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <a href="{{ path('app_iitg_admin_academic_year_new') }}">Create new</a>
{% endblock %}
